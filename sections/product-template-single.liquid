<script>

  var  Swipe  = (function () {
    function  Swipe(element) {
        this.xDown  =  null;
        this.yDown  =  null;
        this.element  =  typeof (element) ===  'string'  ?  document.querySelector(element) :  element;
        this.element.addEventListener('touchstart', function (evt) {
            this.xDown  =  evt.touches[0].clientX;
            this.yDown  =  evt.touches[0].clientY;
        }.bind(this), false);
    }

    Swipe.prototype.onLeft  =  function (callback) {
        this.onLeft  =  callback;
        return this;
    };
    Swipe.prototype.onRight  =  function (callback) {
        this.onRight  =  callback;
        return this;
    };
    Swipe.prototype.onUp  =  function (callback) {
        this.onUp  =  callback;
        return this;
    };
    Swipe.prototype.onDown  =  function (callback) {
        this.onDown  =  callback;
        return this;
    };

    Swipe.prototype.handleTouchMove  =  function (evt) {
        if (!this.xDown  ||  !this.yDown) {
            return;
        }
        var  xUp  =  evt.touches[0].clientX;
        var  yUp  =  evt.touches[0].clientY; 
        this.xDiff  = this.xDown  -  xUp;
        this.yDiff  = this.yDown  -  yUp;

        if (Math.abs(this.xDiff) !==  0) {
            if (this.xDiff  >  2) {
                typeof (this.onLeft) ===  "function"  && this.onLeft();
            } else  if (this.xDiff  <  -2) {
                typeof (this.onRight) ===  "function"  && this.onRight();
            }
        }

        if (Math.abs(this.yDiff) !==  0) {
            if (this.yDiff  >  2) {
                typeof (this.onUp) ===  "function"  && this.onUp();
            } else  if (this.yDiff  <  -2) {
                typeof (this.onDown) ===  "function"  && this.onDown();
            }
        }
        // Reset values.
        this.xDown  =  null;
        this.yDown  =  null;
    };

    Swipe.prototype.run  =  function () {
        this.element.addEventListener('touchmove', function (evt) {
            this.handleTouchMove(evt);
        }.bind(this), false);
    };

    return  Swipe;
}());

  // Custom Code to check for unavailable and sold out variants

  var all_product_variants = [
    {%- for variant in product.variants -%}
        `{{ variant.title }}`,
    {%- endfor -%}
  ];

  var sold_out_variants = [
    {%- for variant in product.variants -%}
      {%- unless variant.available -%}
        `{{ variant.title }}`,
      {%- endunless -%}
    {%- endfor -%}
  ]

  $(document).ready(function(e){
     const handleSwipeEvent = function(direction) {
       //get current slide
       const thumbHolder = $('.product-single__thumbnails');
       const totalThumbs = $('.product-single__thumbnails').children().length;
       const activeSlide = $('.active-thumb');
       if(totalThumbs === 1) return;

       if (direction === 'right' && activeSlide.data('slide') > 1) {
         const next = parseInt(activeSlide.data('slide') - 1, 10);
          thumbHolder.find("[data-slide='" + next + "']").trigger('click');
          $('.product-single__media-flex-wrapper [data-slide-index="' + activeSlide.data('slide') + '"] .product-single__media-wrapper').fadeOut();
          $('.product-single__media-flex-wrapper [data-slide-index="' + next + '"] .product-single__media-wrapper').fadeIn();
          return;
       } else if(direction === 'left' && activeSlide.data('slide') < totalThumbs) {
          const next = parseInt(activeSlide.data('slide') + 1, 10);
          thumbHolder.find("[data-slide='" + next + "']").trigger('click');
          return;
       }

     };

    var swiper = new Swipe('.product-single__media-group');
    swiper.onLeft(function() {
      handleSwipeEvent('left');
    });
    swiper.onRight(function() {
      handleSwipeEvent('right');
    });
    swiper.run();
    check_unavailable_options();

    // $('input[data-index=option1], input[data-index=option2]').on('change',function(){      
    //   check_unavailable_options();  
    // });

    $('input.size, input.serving-size').on('change',function(){
      check_unavailable_options();  
    });

    $('body').on('click','.rc_radio_frequency',function(e){
      var $target_index = $(this).data('targetIndex');
      $(".rc_select__frequency").prop("selectedIndex", $target_index);
    });
  });

  function check_unavailable_options() {

    var $current_option_prefix = '';

    if($('input.size').length) {
      $current_option_prefix = $('input.size:checked').val() + ' / ';
    }

    if($('input.serving-size').length) {
      $current_option_prefix += $('input.serving-size:checked').val() + ' / ';
    }
  }
</script>

