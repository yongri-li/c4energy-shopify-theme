    {
      "type": "image_picker",
      "id": "home_success_image",
      "label": "Image"
    },
    {
      "type": "textarea",
      "id": "home_success_quote",
      "label": "Quote"
    },
    {
      "type": "text",
      "id": "home_success_quote_by",
      "label": "Quote By"
    },
    {
      "type": "text",
      "id": "home_success_cta_label",
      "label": "CTA Label"
    },
    {
      "type": "text",
      "id": "home_success_cta_sublabel",
      "label": "CTA Sublabel"
    },
    {
      "type": "text",
      "id": "home_success_cta_membership_text",
      "label": "CTA Membership Text"
    },
    {
      "type": "url",
      "id": "home_success_cta_url",
      "label": "CTA Url"
    }
  ],
  "presets": [
    {
      "category": "Homepage",
      "name": "Home Success",
      "settings": {}
    }
  ]
}
{% endschema %}