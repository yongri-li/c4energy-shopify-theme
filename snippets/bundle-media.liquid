<!-- Default Image -->
{% if bundle_group == 'brain' and section.settings.bundle_brain_default_image != blank %}
	<img src="{{ section.settings.bundle_brain_default_image | img_url: 'master' }}" class="flavor-can-image">
{% endif %}

{% if bundle_group == 'body' and section.settings.bundle_body_default_image != blank %}
	<img src="{{ section.settings.bundle_body_default_image | img_url: 'master' }}" class="flavor-can-image">
{% endif %}


{% assign product_variants = selected_product.variants %}

{% for variant in product_variants %}
	{%- if variant.title contains '12 Pack / 16oz' -%}
		{% if variant.metafields.c4energy.bottle_image != blank %}
	        <img src="{{ variant.metafields.c4energy.bottle_image }}" class="flavor-can-image hide" data-variant-id="{{ variant.id }}">
      	{% endif %}
	{%- endif -%}
{% endfor %}