<div id="breadcrumb--wrapper">
<div class="container-fluid">
<nav class="breadcrumb" role="navigation" aria-label="breadcrumbs">
  <a href="/"><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="15" height="13" viewBox="0 0 15 13"><image id="Vector_Smart_Object" data-name="Vector Smart Object" width="15" height="13" xlink:href="data:img/png;base64,"/></svg></a>
  {% if template contains 'page' %}
    {% if template.suffix == 'brain-body-bundle' %}
      <span aria-hidden="true">&nbsp;&nbsp;/&nbsp;&nbsp;</span>
      <span>Bundles</span>
    {% endif %}
    <span aria-hidden="true">&nbsp;&nbsp;/&nbsp;&nbsp;</span>
    <span class="current-page">{{ page.title }}</span>
  {% elsif template contains 'product' %}
    {% comment %}
    {% if collection.url %}
      <span aria-hidden="true">&rsaquo;</span>
      {{ collection.title | link_to: collection.url }}
    {% endif %}
    {% endcomment %}
    <span aria-hidden="true">&nbsp;&nbsp;/&nbsp;&nbsp;</span>
    <span><a href="/collections/our-drinks">Our Drinks</a></span>
    <span aria-hidden="true">&nbsp;&nbsp;/&nbsp;&nbsp;</span>
    <span class="current-page">{{ product.title }}</span>
  {% elsif template contains 'collection' and collection.handle %}
    <span aria-hidden="true">&rsaquo;</span>
    {% if current_tags %}
      {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
      {{ collection.title | link_to: url }}
      <span aria-hidden="true">&rsaquo;</span>
      <span>{{ current_tags | join: " + " }}</span>
    {% else %}
      <span>{{ collection.title }}</span>
    {% endif %}
  {% elsif template == 'blog' %}
    <span aria-hidden="true">&rsaquo;</span>
    {% if current_tags %}
      {{ blog.title | link_to: blog.url }}
      <span aria-hidden="true">&rsaquo;</span>
      <span>{{ current_tags | join: " + " }}</span>
    {% else %}
    <span>{{ blog.title }}</span>
    {% endif %}
  {% elsif template == 'article' %}
    <span aria-hidden="true">&rsaquo;</span>
    {{ blog.title | link_to: blog.url }}
    <span aria-hidden="true">&rsaquo;</span>
    <span>{{ article.title }}</span>
  {% else %}
   <span aria-hidden="true">&rsaquo;</span>
   <span>{{ page_title }}</span>
  {% endif %}
  </div>
</nav>
</div></div>