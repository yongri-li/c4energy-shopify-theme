      .product__description__property {
        display: none;
      }

      
      .js .order-summary--is-collapsed {
        height: auto !important;
        visibility: visible !important;
      }
    </style>

  {% render 'shogun-head' %}
  <!-- Ground Truth -->
  <script type="text/javascript">document.write("<img src='http://bidagent.xad.com/conv/210419?ts=" + Date.now() + "' style='display:none;width:0;height:0;overflow:hidden;'>");</script>
</head>
  <body>
    {{ skip_to_content_link }}

    <div class="banner" data-header>
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </div>

    {{ order_summary_toggle }}

    <div class="content" data-content>
      <div class="wrap">
        <div class="main" role="main">
          <div class="main__header">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </div>
          <div class="main__content">
            {{ content_for_layout }}
          </div>
          <div class="main__footer">
            {{ content_for_footer }}
          </div>
        </div>
        <div class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </div>
      </div>
    </div>

    {{ tracking_code }}

    {% if customer %}
     {% include 'stamped-checkout-slider' %}  
    {% endif %}

    {%- comment -%}
    This snippet of code is to show the message in checkout for line items 
    with an overselling message, or maybe other types of messages.
    {%- endcomment -%}
    <script>
      Checkout.$('.product__description__property').each( function() {
        var $el = Checkout.$(this); 
        if ($el.text().indexOf('message: ') > -1 ) {
          
          $el.show().css({
            fontWeight: 'bold',
            display: 'inline-block',
            marginTop: '5px',
          }).text( $el.text().replace('message: ', '' )); 
        }
      }); 
    </script>
  </body>
