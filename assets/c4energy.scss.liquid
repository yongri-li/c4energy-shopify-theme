              left: 0;
            }

            &:hover {
              > .tooltip {
                @media (min-width: $screen-sm-min) {
                  transform: translateX(-80%);
                }
              }
            }
          }

          &:before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 32px;
            height: 32px;
            border-radius: 100%;

            @media (max-width: $screen-xs-max) {
              top: 50%;
              transform: translateY(-50%);
              left: 10px;
              width: 20px;
              height: 20px;
            }
          }
        }
