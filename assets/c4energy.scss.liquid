/**
 * GWP popup
 */
.gwp-popup__overlay {
  display: none;
  opacity: 0;
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9999999999999;
  justify-content: center;
  align-items: center;
  transition: all 0.5s;

  &.active {
    display: flex;
    opacity: 1;
  }

  .gwp-popup__container {
    margin-top: -10%;
    width: 85%;
    max-width: 354px;
    min-height: 385px;
    max-height: 90%;
    background-color: #ffffff;
    box-shadow: 0 16px 32px 0 rgba(0, 0, 0, 0.16);
    display: flex;
    position: relative;
    flex-wrap: wrap;
    overflow-y: auto;

    @media (min-width: 768px) {
      width: 700px;
      max-width: 700px;
    }

    .close {
      position: absolute;
      top: 10px;
      right: 10px;
      font-size: 23px;
      line-height: 15px;
      text-align: left;
      color: #707070;
      font-family: 'Helvetica', sans-serif;
      font-weight: 600;
      cursor: pointer;
    }

    .image {
      height: 214px;
      max-height: 214px;
      width: 100%;
      display: flex;
      align-items: center;

      @media (min-width: 768px) {
        height: 100%;
        width: 325px;
        min-height: 385px;
        max-height: unset;
      }

      img {
        height: 100%;
        width: 100%;
        object-fit: contain;
      }
    }

    .details {
      width: 100%;
      padding: 25px 35px;

      @media (max-width: 767px) {
        padding-bottom: 0;
      }

      @media (min-width: 768px) {
        width: calc(100% - 325px);
      }

      .surtitle {
        font-family: 'Anton', sans-serif;
        font-size: 16px;
        line-height: 2.13;
        text-align: left;
        color: #707070;
        text-transform: uppercase;
      }

      .title {
        font-family: 'Anton', sans-serif;
        font-size: 36px;
        line-height: 1.22;
        text-align: left;
        color: #1a1a1a;
        text-transform: uppercase;
      }

      .gwp-atc {
        width: 100%;
        height: 110px;
        display: flex;
        flex-wrap: wrap;
        margin-top: 25px;

        @media (min-width: 768px) {
          height: 55px;
        }

        .gwp-atc__button {
          padding: 0 25px;
          height: 55px;
          font-family: 'Anton', sans-serif;
          background-color: #ffe500;
          font-size: 21px;
          line-height: 1;
          text-align: center;
          color: #1a1a1a;
          text-transform: uppercase;
          display: flex;
          justify-content: center;
          align-items: center;
          cursor: pointer;
        }

        .gwp-atc__cancel {
          width: 100%;
          flex-basis: 100%;
          height: 55px;
          display: flex;
          align-items: center;
          font-family: 'Helvetica', sans-serif;
          font-size: 13px;
          color: #1a1a1a;
          text-decoration: underline;
          text-align: center;
          justify-content: center;

          @media (min-width: 768px) {
            width: auto;
            flex-basis: auto;
            text-align: left;
            justify-content: flex-start;
            margin-left: 15px;
          }

          span {
            cursor: pointer;
          }
        }
      }

      .gwp-message {
        height: 15px;
        opacity: 0;
        transition: all 0.5s;
        font-family: 'Helvetica', sans-serif;
        font-size: 14px;
        margin-top: 5px;

        &.active {
          opacity: 1;
        }
      }

      .variants {

        .radio-wrapper {
          margin-top: 15px;

          .single-option-radio__label {
            font-family: 'Helvetica', sans-serif;
            font-size: 14px;
            line-height: 1;
            text-align: left;
            color: #190414;
          }
        }

        .single-option-radio {

          label {
            padding: 8px 13px;
            border: 2px solid #dddfe0;
            display: inline-block;
            cursor: pointer;
            margin-right: 10px;
            margin-bottom: 5px;
            transition: background-color 0.25s;

            &.active {
              border: none;
              padding: 10px 15px;
              background-color: #ffe500;
            }
          }

          input[type="radio"] {
            display: none;
          }
        }

        .radio-wrapper.select {
          margin-top: 15px;

          label {
            margin-bottom: 10px;
            font-family: 'Helvetica', sans-serif;
            font-size: 14px;
            line-height: 1;
            text-align: left;
            color: #190414;
            display: block;
          }

          select {
            height: 55px;
            width: 100%;
            padding-right: 30px;
            padding-left: 15px;
            border: 2px solid #dddfe0;
            color: #707070;
          }

          .fas.fa-chevron-down.select-icon {
            margin-left: -30px;
            background-color: white;
            height: 20px;
            width: 23px;
            color: #707070;
          }
        }
      }
    }
  }
}

