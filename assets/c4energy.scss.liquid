/* BUNDLE REDESIGNED */

#bundle-flavor-selection {
  position: relative;
  overflow-x: hidden;

  &:before,
  &:after {
    content: "";
    position: absolute;
    top: 0;
    height: 100%;
    width: 33%;
    z-index: -1;

    @media (min-width: $screen-sm-min) {
      width: 38vw;
    }

    @media (min-width: $screen-md-min) {
      width: 200px;
    }

    @media (min-width: $screen-lg-min) {
      width: 240px;
    }

    @media (min-width: $screen-xl-min) {
      width: calc(((100vw - 1440px) / 2) + 355px);
    }
  }

  &:before {
    left: 0px;
    background-image: linear-gradient(to bottom, #ed1c24, #0061af);
  }

  &:after {
    right: 0px;
    background-image: linear-gradient(to bottom, #1462a2, #0099ce);
  }
}

#bundle-selection--section {
  display: flex;
  flex-wrap: wrap;

  @media (max-width: $screen-sm-max) {
    justify-content: space-between;
  }

  @media (min-width: $screen-md-min) {
    min-height: 630px;
  }

  @media (min-width: $screen-lg-min) {
    min-height: 700px;
  }

  #bundle-selection--section-left,
  #bundle-selection--section-right {
    display: flex;

    @media (max-width: $screen-sm-max) {
      width: 45%;
      min-height: 460px;
    }

    @media (max-width: $screen-xs-max) {
      min-height: 295px;
      width: 42%;
    }

    @media (min-width: $screen-md-min) {
      flex: 0 255px;
    }

    @media (min-width: $screen-lg-min) {
      flex: 0 265px;
    }
  }

  #bundle-selection--section-left {
    justify-content: flex-end;
    position: relative;

    @media (max-width: $screen-sm-max) {
      order: 2;
    }

    .plus-icon {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      width: calc(100vw - 40px);
      left: 0;
      display: flex;
      align-items: center;
      justify-content: center;

      @media (min-width: $screen-md-min) {
        display: none;
      }

      svg {
        width: 40px;

        path {
          stroke: $c4-yellow;
        }
      }
    }
  }

  #bundle-selection--section-right {
    @media (max-width: $screen-sm-max) {
      order: 3;
    }
  }

  .bundle-media {
    position: relative;
    padding-top: 25px;
    width: 100px;

    @media (min-width: $screen-sm-min) {
      width: 150px;
      padding-top: 50px;
    }

    @media (min-width: $screen-md-min) {
      padding-top: 100px;
      width: 175px;
    }

    @media (min-width: $screen-lg-min) {
      width: 200px;
    }

    .flavor-can-image {
      position: absolute;
      width: 100%;
    }
  }

  #bundle-selection--section-center {
    padding: 60px 15px 40px;
    position: relative;

    @media (max-width: $screen-sm-max) {
      width: calc(100% + 40px);
      background: $white;
      order: 1;
      margin-left: -20px;
      margin-right: -20px;
      padding: 20px 15px 10px;
