.accordion-trigger {
  font-size: 20px;
  font-family: 'Anton', sans-serif;
  text-transform: uppercase;
  padding: 18px 0px;
  border-top: 2px solid $black;
  position: relative;
  cursor: pointer;
  background: transparent;
  transition: all .3s linear;
  padding-left: 14px;
  padding-right: 30px;

  @media (min-width: $screen-sm-min) {
    font-size: 22px;
  }

  &:after {
    content: '+';
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 10px;
    font-family: 'HelveticaNeue', sans-serif;
    font-weight: 500;
    font-size: 22px;
  }

  &:hover {
    background: $c4-yellow;
  }
}

.accordion-content {
  padding: 20px 14px;
  display: none;
}


#product-benefits {
  background: #f2f2f2;
  padding: 0px 0px 30px;
  position: relative;

  @media (min-width: $screen-md-min) {
    padding: 50px 0px;
  }

  &:before {
    content: '';
    position: absolute;
    top: -100px;
    left: 0;
    width: 100%;
    height: 170px;
    background-image: url('product-benefit-shape.png');
    background-size: cover;
    background-position: top;

    @media (min-width: $screen-lg-min) {
      top: -6.5vw;
    }
  }

  #product-benefits--wrapper {
    display: flex;
    flex-wrap: wrap;

    .product-benefit {
      display: flex;
      font-size: 15px;

      @media (min-width: $screen-sm-min) {
        width: calc((100% - 15px) / 2);
      }

      @media (max-width: $screen-sm-max) {
        margin: 20px 0px;
      }

      @media (max-width: $screen-xs-max) {
        margin: 10px 0px;
      }

      @media (min-width: $screen-md-min) {
        width: calc((100% - 45px) / 4);
      }

      &:nth-child(2n+2) {
        @media (min-width: $screen-sm-min) and (max-width: $screen-sm-max) {
          margin-left: 15px;
        }
      }

      &:not(:first-of-type) {
        @media (min-width: $screen-md-min) {
          margin-left: 15px;
        }
      }

      .product-benefit--left {
        flex: 0 auto;
      }

      .product-benefit--right {
        flex: 1;
        padding-left: 10px;
      }

      .benefit-title {
        font-family: 'Anton', sans-serif;
        margin-bottom: 5px;
      }

      .benefit-description {
        margin-bottom: 0px;
        line-height: 1.5;
      }
    }
  }
}


#product-ingredients {
  position: relative;

  .slick-track {
    display: flex;
  }

  .slick-dots {
    bottom: 10px;

    @media (min-width: $screen-md-min) {
      display: none;
    }
  }

  .slick-dots li button:before {
    font-size: 0px;
    border: 1px solid $white;
    border-radius: 100%;
    opacity: 1;
  }

  .slick-dots li.slick-active button:before {
    color: $white;
    background: $white;
    opacity: 1;
  }

  #product-ingredients--wrapper {

    .product-ingredient {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 85vw;
      text-align: center;
      outline: none;
      height: auto;

      @media (min-width: $screen-sm-min) {
        min-height: 39vw;
      }

      @media (min-width: $screen-md-min) {
        min-height: 26vw;
      }

      &:hover {
        > .product-ingredient--overlay {
          opacity: .3;
        }
      }

      .product-ingredient--overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: $black;
        opacity: .75;
        transition: opacity .2s linear;
      }

      .product-ingredient--content {
        position: relative;
        color: $white;
        padding: 40px;
        max-width: 410px;

        svg {
          @media (max-width: $screen-md-max) {
            width: 60px;
            height: auto;
          }
        }

        .ingredient-title {
          color: $c4-yellow;
          margin: 10px 0px;
        }

        .ingredient-description {
          font-weight: 500;
          font-size: 15px;
          line-height: 24px;
          margin: 0;
        }
      }
    }
  }
}


#product-features {
  background-repeat: no-repeat;
  background-position: right center;
  background-size: auto 100%;

  @media (max-width: $screen-md-max) {
    min-height: 400px;
    display: flex;
    align-items: center;
  }

  @media (max-width: $screen-xs-max) {
    min-height: 200px;
  }

  .product-features-title {
    font-size: 40px;
    color: $c4-yellow;
    margin-bottom: 0px;

    @media (max-width: $screen-md-max) {
      max-width: 350px;
    }

    @media (max-width: $screen-xs-max) {
      max-width: 200px;
    }

    @media (min-width: $screen-sm-min) {
      font-size: 70px;
    }

    @media (min-width: $screen-lg-min) {
      margin-top: 60px;
      margin-bottom: 30px;
    }

    @media (min-width: $screen-xl-min) {
      font-size: 100px;
    }
  }
}

#product-features--wrapper {
  margin-bottom: 35px;

  @media (max-width: $screen-md-max) {
    margin-top: 35px;
  }

  @media (min-width: $screen-lg-min) {
    width: calc(100% - 450px);
    max-width: 900px;
    display: flex;
    flex-wrap: wrap;
  }

  .product-feature {
    margin-bottom: 25px;

    @media (min-width: $screen-lg-min) {
      width: calc((100% - 40px) / 2);
    }

    &:nth-child(2n+2) {
      @media (min-width: $screen-lg-min) {
        margin-left: 40px;
      }
    }

    .feature-title {
      font-size: 32px;
      margin: 0;
    }

    .feature-subtitle {
      font-size: 20px;
      color: #6d6e70;
    }

    .feature-description {
      font-size: 15px;
    }
  }
}


.product-recommendations {
  background: #f2f2f2;
  padding: 35px 0px;

  .product-recommendations-title {
    font-size: 28px;
    text-align: center;

    @media (min-width: $screen-sm-min) {
      font-size: 36px;
      text-align: left;
    }
  }

  .grid-view-item__image {
    mix-blend-mode: multiply;
  }

  .product-recommendations-grid--content {
    @media (max-width: $screen-xs-max) {
      flex-direction: column;
      align-items: center;
    }
  }

  .item-product {

    &:nth-child(3) {
      @media (max-width: $screen-sm-max) {
        margin-left: 20px $i;
      }

      @media (max-width: $screen-xs-max) {
        margin-left: 0px $i;
      }
    }

    @media (max-width: $screen-sm-max) {
      width: calc((100% - 40px) / 3) $i;
    }

    @media (max-width: $screen-xs-max) {
      width: 300px $i;
      display: flex;
      margin-left: 0px $i;
      margin-bottom: 0px $i;
    }

    .product-card__image-with-placeholder-wrapper {
      background: #f2f2f2;

      @media (max-width: $screen-xs-max) {
        width: 120px;
      }
    }

    .item-product--meta {
      @media (max-width: $screen-xs-max) {
        text-align: left $i;
        padding-left: 10px;
      }
    }
  }
}

#product-reviews {
  padding: 75px 0px;
}


#product-flavors {

  @media (min-width: $screen-sm-min) {
    min-height: 550px;
  }

  .image-container {
    position: absolute;
    width: 100%;
    height: 180px;

    @media (min-width: $screen-sm-min) {
      height: 480px;
    }

    @media (min-width: $screen-lg-min) {
      height: 550px;
    }
  }

  .product-flavors--wrapper {
    position: relative;
    padding-top: 40px;
    display: flex;
    align-items: flex-start;

    @media (min-width: $screen-sm-min) {
      padding-top: 100px;
    }
  }

  .product-flavors--left {
    padding-left: 30px;
    flex: 210px auto;
    max-width: 210px;
    position: relative;

    @media (min-width: $screen-sm-min) {
      padding-left: 50px;
      flex: 0 auto;
      max-width: 390px;
    }

    @media (min-width: $screen-lg-min) {
      padding-left: 85px;
      flex: 0 auto;
      max-width: 425px;
    }
  }

  .product-flavors--right {
    flex: 1;
    padding-left: 35px;
    padding-top: 25px;
    overflow: hidden;
    padding-bottom: 50px;

    @media (min-width: $screen-sm-min) {
      padding-left: 60px;
      padding-top: 75px;
      padding-bottom: 100px;
    }
  }

  .flavors-title {
    color: $white;
    font-size: 40px;

    @media (min-width: $screen-sm-min) {
      font-size: 56px;
    }

    @media (min-width: $screen-lg-min) {
      font-size: 72px;
    }

    span {
      -webkit-text-stroke: 2px $white;
      color: transparent;
    }
  }

  #flavor-info--slider {
    background: $c4-yellow;
  }

  .flavor-info {
    padding: 17px 17px 40px;
    background: $c4-yellow;
    outline: none $i;

    @media (min-width: $screen-sm-min) {
      padding: 35px;
      min-height: 280px;
    }

    @media (min-width: $screen-lg-min) {
      padding: 50px 45px;
    }

    .flavor-item-title {
      font-size: 18px;

      @media (min-width: $screen-sm-min) {
        font-size: 25px;
      }
    }

    .flavor-item-description {
      font-size: 15px;
      margin-bottom: 10px;

      @media (min-width: $screen-sm-min) {
        font-size: 18px;
      }
    }
  }

  #flavor-info--navigation {
    display: flex;
    align-items: center;
    width: 51px;
    left: 47px;
    bottom: 15px;
    position: absolute;

    @media (min-width: $screen-sm-min) {
      width: 65px;
      left: 85px;
      bottom: 35px;
    }

    @media (min-width: $screen-lg-min) {
      left: 130px;
    }

    .slick-arrow {
      cursor: pointer;
    }

    .slick-arrow.slick-disabled {
      opacity: .3;
    }

    .slick-prev,
    .slick-next {
      position: relative;
      top: auto;
      width: auto;
      height: auto;
      transform: none;

      &:before {
        content: '';
        font-size: 0px;
      }

      .fas {
        font-size: 15px;
        color: #000;

        @media (min-width: $screen-md-min) {
          font-size: 18px;
        }
      }
    }

    .slick-prev {
      left: 0;
    }

    .slick-next {
      right: 0;
    }

    .slick-separator {
      cursor: default $i;
      margin: 0 20px;
      font-size: 15px;
      opacity: 1 $i;
    }
  }

  #flavor-image--slider {
    .slick-list {
      overflow: visible;
    }
  }

  .flavor-image--item {
    margin: 0 20px;
    outline: none $i;

    @media (min-width: $screen-sm-min) {
      margin: 0 30px;
    }

    &.slick-current {
      .flavor-image {
        transform: scale(1.2);
        filter: brightness(100%);
      }
    }

    .flavor-image {
      max-width: 105px;
      transform: scale(1);
      transition: transform .2s linear, filter .2s linear;
      filter: brightness(50%);

      @media (min-width: $screen-sm-min) {
        max-width: 190px;
      }
    }
  }
}


